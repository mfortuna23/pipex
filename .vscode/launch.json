{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with Arguments",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/${fileBasenameNoExtension}",
            "args": ["file1", "grep a", "wc -l", "file2"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
					"autoAttachChildProcesses": true,
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            // "args": ["${input:args}"]
        }
    ],
